{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "verify",
			"type": "shell",
			"command": "mvn -B verify",
			"group": "build"
		},
		{
			"label": "package",
			"type": "shell",
			"command": "mvn -B package",
			"group": "build"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "mvn -B clean",
			"group": "build"
		},
		{
			"label": "install",
			"type": "shell",
			"command": "mvn -B install",
			"group": "build"
		},
		{
			"label": "test",
			"type": "shell",
			"command": "mvn -B test",
			"group": "test"
		},
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "starlightchatassistantazurewebsitesnet:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"file": "app.py"
			}
		}
	]
}